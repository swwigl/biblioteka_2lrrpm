<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="biblioteka_2lrrpm.BookPage"
             Title="Новая книга">
    <StackLayout>
        <Entry x:Name="nameEntry" Text="{Binding Path=Name}" Placeholder="Название книги"  />
        <Entry x:Name="authorEntry" Text="{Binding Path=Author}" Placeholder="Автор книги"/>
        <Entry x:Name="genreEntry" Text="{Binding Path=Genre}" Placeholder="Жанр книги"/>
        <Button Text="Сохранить" Clicked="SaveBook" />
    </StackLayout>
</ContentPage>
